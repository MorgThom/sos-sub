            {
            } while (IMU.yGyro > tiltMax);

            DirectMotorLink.KillAllMotors();
            DirectMotorLink.RollRight();
            do
            {
            } while (IMU.yGyro < -tiltMax);

            DirectMotorLink.KillAllMotors();
            DirectMotorLink.PitchDown();
            do
            {
            } while (IMU.zGyro > tiltMax);

            DirectMotorLink.KillAllMotors();
            DirectMotorLink.PitchUp();
            do
            {
            } while (IMU.zGyro < -tiltMax);
            DirectMotorLink.KillAllMotors();
        }
