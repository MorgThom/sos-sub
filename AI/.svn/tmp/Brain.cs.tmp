                    {
                        DirectMotorLink.KillAllMotors();
                        DirectMotorLink.DriveForward();
                        currentDirection = FORWARD;
                    }
                }
                Thread.Sleep(50);//only do something new every half second
            }
            DirectMotorLink.KillAllMotors();
        }

